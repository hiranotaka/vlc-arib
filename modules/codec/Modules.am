### FFmpeg/libav ###
libavcodec_plugin_la_SOURCES = \
	avcodec/avcommon_compat.h \
	avcodec/avcommon.h \
	avcodec/video.c \
	avcodec/subtitle.c \
	avcodec/audio.c \
	avcodec/cpu.c \
	avcodec/fourcc.c \
	avcodec/chroma.c avcodec/chroma.h \
	avcodec/va.h \
	avcodec/avcodec.c avcodec/avcodec.h
